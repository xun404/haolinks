function star()
{
	changeall();
	getrate();
	Cleartxt();
}
function ChkCZDate(edit)
{
	edit.value=Trim(edit.value);
	if(edit.value=='') return true;
	if(!Cal_datevalid(edit,'1910-1-1','3000-1-1')) 
	{
		alert('日期格式不正确,日期有效范围为1910年到3000年');
		edit.focus();
	}
 }
