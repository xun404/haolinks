<SCRIPT language=javascript>
		function SaveYearsChg()
		{
          switch(ImpLoanCalc.edSaveYears.selectedIndex)
	      {
        	  case 0:
	            SaveYears=0.25;
	            break;
	          case 1:
	            SaveYears=0.5;
	            break;	  
	          case 2:
	            SaveYears=1;
	            break;	  
	          case 3:
				SaveYears=2;
				break;
			  case 4:
			    SaveYears=3;
			    break;
			  case 5:
				SaveYears=5;
				break;	  
		  }
	      ImpLoanCalc.edFixedDepositRate.innerText=GetRMBSaveRatio(2,SaveYears*12,window.xmlRMBSaveRate.XMLDocument);
		
          switch(ImpLoanCalc.edSaveYears.selectedIndex)
	      {
        	  case 0:
	            SaveYears=0.25;
	            break;
	          case 1:
	            SaveYears=0.5;
	            break;	  
	          case 2:
	            SaveYears=1;
	            break;	  
	          case 3:
				SaveYears=2;
				break;
			  case 4:
			    SaveYears=3;
			    break;
			  case 5:
				SaveYears=5;
				break;
		  }
	      ImpLoanCalc.edCurrentDepositRate.innerText=GetRMBSaveRatio(1,"0",window.xmlRMBSaveRate.XMLDocument);
		}
		</SCRIPT>

<SCRIPT>


function Lance(){
	if(!CheckEmpty(this.document.all.edInitSaveInDate,"初始存入日期格式不正确！"))
		return false;		
	if (!CheckFN3(ImpLoanCalc.edInitSaveInSum,"请在初始存入金额输入正数",false))
	   	return false;	       		    
	if (!CheckFN3(ImpLoanCalc.edFixedDepositRate,"请在定期存款年利率输入正数",false,null,4))
	   	return false;
	if (!CheckFN3(ImpLoanCalc.edCurrentDepositRate,"请在活期存款年利率输入正数",false,null,4))
	   	return false;	   			
	if(!CheckEmpty(this.document.all.edAdvanceDrawDate,"提前支取日期格式不正确！"))
		return false;	   	
	if (!CheckFN3(ImpLoanCalc.edAdvanceDrawSum,"请在提前支取金额输入正数",false))
	   	return false;	       		    
	if (!CheckPN(ImpLoanCalc.edImpawnSum,"请在存单质押贷款金额输入正整数",false))
	   	return false;	       		    
	if (!CheckFN3(ImpLoanCalc.edImpawnRate,"请在存单质押贷款年利率输入正数",false))
	   	return false;
	if (!CheckPN(ImpLoanCalc.edImpawnTime,"请在存单质押贷款期限输入正整数",false))
	   	return false;	
	if (Cal_strtodate(this.document.all.edAdvanceDrawDate.value) <= Cal_strtodate(this.document.all.edInitSaveInDate.value))
	{
		DispMessage(this.document.all.edAdvanceDrawDate, "提前支取日期应晚于初始存入日期！");
		return false;
	}
	
	var CompResult=CalcImpLoan(document); 
    if (CompResult>0)
      edResult.innerText="采用存单质押贷款方式要比提前支取方式多收益"+NBround(CompResult,2)+"元";
    else
    {
      if (CompResult<0)
        edResult.innerText="采用提前支取方式要比存单质押贷款方式多收益"+NBround(-CompResult,2)+"元";
      else
        edResult.innerText="采用存单质押贷款方式与提前支取方式收益相同";    
    }
      
	return true;					}
		</SCRIPT>

<SCRIPT language=javascript>
