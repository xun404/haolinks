<SCRIPT>
function Lance(){
	if (!CheckFN3(InflatOrInVestCalc.edSum,"请在初始投资金额输入正数",false))
	   	return false;	       		    
	if (!CheckPN(InflatOrInVestCalc.edTerm,"请在投资年限输入正整数",false))
	   	return false;	       		    
	if (!CheckFN3(InflatOrInVestCalc.edRate,"请在预期的年收益率输入非负数",true))
	   	return false;
	if (!CheckFN3(InflatOrInVestCalc.edInflatRate,"请在预期的年通货膨胀率输入非负数",true))
	   	return false;	   	
	
	CalcInflatOrInvest(document);
	
	return false;
}
